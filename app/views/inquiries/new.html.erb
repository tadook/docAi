<h1>問診票</h1>
<%= form_for :inquiry, url: inquiries_path do |f| %>
  <p><%= f.label :age %>: <%= f.text_field :age, :style => 'width: 30px' %></p>
  <p>
    <%= f.label :sex %><br>
    <%= f.radio_button :sex, :male, :checked => true  %> Male
    <%= f.radio_button :sex, :female %> Female
  </p>
  <p><%= f.label :height %>: <%= f.text_field :height, :style => 'width: 30px' %></p>
  <p><%= f.label :weight %>: <%= f.text_field :weight, :style => 'width: 30px' %></p>
  <p><%= f.submit '送信する' %></p>
<% end %>
